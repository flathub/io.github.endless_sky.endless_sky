{
    "id": "io.github.endless_sky.endless_sky",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "endless-sky",
    "rename-icon": "endless-sky",
    "finish-args": [
        "--socket=pulseaudio",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri"
    ],
    "add-extensions": {
        "io.github.endless_sky.endless_sky.plugins": {
            "directory": "share/games/endless-sky/plugins",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "modules": [
        "shared-modules/glu/glu-9.json",
        "shared-modules/glew/glew.json",
        "shared-modules/libmad/libmad.json",
        {
            "name": "endless-sky",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_TESTING=OFF",
                "-DES_USE_VCPKG=OFF"
            ],
            "post-install": [
                "install -Dm755 /app/games/endless-sky /app/bin/endless-sky",
                "mkdir -p /app/share/games/endless-sky/plugins/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/endless-sky/endless-sky/archive/refs/tags/continuous.tar.gz",
                    "sha256": "00ae58e6f5a54a087385c3710191221cabe0d9ed764858fdc4cfcf4ce3afae84",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 10359,
                        "stable-only": true,
                        "url-template": "https://github.com/endless-sky/endless-sky/archive/refs/tags/v$version.tar.gz"
                    }
                },
                {
                    "type": "patch",
                    "path": "use-app-not-usr-directory.patch"
                }
            ]
        }
    ]
}
